<script>
    function dispIndexImageError(image) {
      image.onerror = "";
      image.src = "<%= asset_path 'homepage/news-substitute.jpg' %>"
      return true;
    }
</script>


<% @articles_viewed.each_with_index do |article, i| %>
    
        <div class = 'article <%=article.source.name.downcase.tr(" ", "_") if article.source 
            %><%article.categories.each do |category| 
                %> <%=category.name.downcase.tr(" ", "_")
                %><%end
            %><%article.states.each do |state|
                %> <%=state.name.downcase.tr(" ", "_")
                %><%end%><%if (i + 1) % 4 == 0 %> last<% end %>' style = "<% if article.image %> background: url('<%= article.image %>'), url('<%= asset_path 'homepage/news-substitute.jpg' %>'); <% else %> background: url('<%= asset_path 'homepage/news-substitute.jpg' %>') <% end %>;">
        
        <a href = '<%= article_path(article)%>'>
            
            <div class = 'article-date'>
                <%= time_ago_in_words(article.created_at) %> ago
            </div>
            
            <div class = 'article-bottom'>
                <div class = 'grid-article-title'>
                    <h1><%= article.title.truncate(60) if article.title %></h1>
                </div>
                <div class = 'article-source'>
                    <img class='inline' src = "<%= asset_path(article.source.sidebar_logo) if article.source %>">
                    <div class = 'article-source-name inline'>
                        <%= article.source.name %>
                    </div>
                </div>
                <div class = 'social-sharing' style = 'position: absolute; botton: 20px; right: 20px'>
                    <%= social_share_button_tag(article.title, :url => "https://cannabiz-news.herokuapp.com/articles/#{article.id}", :image => "#{article.image}") %>
                </div>
                <% if @current_user && @current_user.admin? %>
                    <div class = 'admin-twitter-share'>
                        <p class = 'admin-twitter-share-button'><%= link_to "SHARE", tweet_path(article) %></p>
                    </div>
                <% end %>
            </div>
            </a>
        </div>
<% end %>