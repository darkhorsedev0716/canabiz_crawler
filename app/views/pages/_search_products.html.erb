

<!-- Start page content -->

<div class="container margintop">
    <div class="row">

        <!-- Table -->
        <div class="col-md-9 col-lg-9 col-xs-12 col-sm-12">
            <div>
                <div class="row mb-40">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2 class="h6 header-color inline-block uppercase">Products</h2>
                        </div>
                    </div>
                </div>   
            </div>

            <div class="mb-20">
            	<%= page_entries_info @products, :model => ''%>
	        	<% if @searchQuery != nil && @searchQuery != ''%>
	        		for <%= @searchQuery %>
	        	<% end %>
            </div>

            <div class="row">
                <!-- Start single post image formate-->
                <div class="col-md-12">
                    <article class="zm-post-lay-single">
                        <div class="zm-post-thumb">
                        </div>
                        <div class="rowspacer">
                            <div class="row">
                                <div class = "product-results">
                                    <!-- render with _product partial -->
        							<%= render @products %>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
        <!--end results table-->

    </div>
</div>
<!-- End page content -->

<!-- Start pagination area -->
<div class="row hidden-xs">
    <div class="zm-pagination-wrap mt-30">
        <nav class="zm-pagination ptb-40 text-center">
            <div class = "product-results-pagination">
        	    <%= will_paginate @products %>
            </div>
        </nav>
    </div>
</div>


<div class="spacer"></div>
