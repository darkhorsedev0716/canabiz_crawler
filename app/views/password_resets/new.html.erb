<h4>Reset Your Password</h4>

<div class='row'>
    <div class='col-xs-12'>
        <%= form_tag password_resets_path do %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= label_tag :email %>
                </div>
                <div class="col-sm-8">
                    <%= text_field_tag :email %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= submit_tag "Reset Password" %>
                </div>
            </div>
        <% end %>
    </div>
</div>