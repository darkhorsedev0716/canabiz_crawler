<!-- Start page content -->
<section id="page-content" class="page-wrapper">
    <!-- Start blog index area -->
    <div class="zm-section bg-white pt-60">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-6 col-sm-12">
                    <div class="section-title-2 mb-40  text-center">
                        <h3 class="inline-block uppercase">Blog Posts</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-lg-6 col-sm-12">
                <div class="row">
                    <div class="zm-posts clearfix">
                        <%= render :partial => "blog", 
                            :collection => @blogs, :as => :blog %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End blog index area -->
</section>
<!-- End page content -->