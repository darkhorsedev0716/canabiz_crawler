<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@category, :html => {class:"form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Category", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :keywords %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :keywords, rows: 10, class: "form-control", placeholder: "Keyword, Keyword, Keyword" %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :active %>
                </div>
                <div class="col-sm-8">
                    False: <%= f.radio_button :active, false, :checked => true , :value => false %>  True: <%= f.radio_button :active, true, :value => true%>
                </div>
            </div>            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-lg btn-xlarge'%>
                </div>
            </div>
        <% end %>
        <div class="center">
            <%= link_to 'Return to Category Listing', category_admin_path %>
        </div>
    </div>
</div>