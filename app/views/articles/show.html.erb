<div class = 'article-page-heading'>
    <!--put the background image in here-->
</div>

<div class = 'article-right-sidebar'>
    <h1 class = 'article-right-sidebar-title'>Related News</h1>
    
    <% @related_articles.each do |article| %>
        <div class = 'related-article' style = "<% if article.image %> background: url('<%= article.image %>'), url('<%= asset_path 'homepage/news-substitute.jpg' %>'); <% else %> background: url('<%= asset_path 'homepage/news-substitute.jpg' %>') <% end %>;">
            <div class = 'article-image'>
            </div>
            
            <div class = 'article-date'>
                <%= time_ago_in_words(article.created_at) %> ago
            </div>
            
            <div class = 'article-bottom'>
                <div class = 'single-article-title'>
                    <h1><%= article.title.truncate(60) if article.title %></h1>
                </div>
                <div class = 'article-source'>
                    <img src = "<%= asset_path(article.source.article_logo) if article.source %>">
                </div>
                <div class = 'article-category'>
                    
                </div>
            </div>            
        </div>
    <% end %>
    
    <div class = 'more-from-same-source'>
        <h2>More From <%= @article.source.name if @article.source %></h2>
        
        <% @same_source_articles.each do |article| %>
            <p><%= link_to article.title, article_path(article)%></p>
        <% end %>
        
    </div>
</div>

<div class = 'article-wrap'>
    <div class = 'article-big-image'>
        <% if @article.image != nil && @article.source != 'Marijuana Business Daily' %>
            <%= image_tag(@article.image) %>
        <% else %>
            <%= image_tag("article-pages/news-substitute.jpg") %>
        <% end %>
    </div>
    <div class = 'article-title'>
        <h1><%=@article.title%></h1>
    </div>
    <div class = 'article-date'>
        <p><%= @article.date.strftime("%B %d, %Y | %I:%M %p") %></p>
    </div>
    <div class = 'article-body'>
        
        <p><%= simple_format(@article.body) %></p>
    </div>

</div>

