<!-- Start page content -->
<section id="page-content" class="page-wrapper archive">
    <div class="zm-section single-post-wrap archive-2 bg-white ptb-15">
        <div class="container">
            <div class="row">
            	
                <!-- Start left side -->
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 columns">
                	<div class="row">
                        <div class="col-xs-12">
                            <div class="archive-inner">
                                <div class="archive-filter">
                                    <h6 align="center"><%= link_to 'Back to Admin Home', admin_path %></h6>
                                    <h3 align="center">These are the Articles that will appear in the Weekly Digest</h3>
                                    <p align="center">Digest Sent out via a Background Job that will Queue after clicking the button below. It may take several minutes before the email is sent</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-40">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="row">
                                <div class="zm-posts clearfix">
                                    <%= render @articles %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="message-box">
		                <form id="contact-form" role="search" method="get" action = '/send_weekly_digest'>
		                    <div class="row">
		                        <div class="col-md-6 col-sm-6 col-xs-12" style="margin: 0 auto; float: none;">
		                            <button class="submit-button" type="submit">Send Weekly Digest</button>
		                        </div>
		                    </div>
		                </form>
		                <p class="form-messege"></p>
		            </div>
                </div>
                <!-- End left side -->
        </div>
    </div>
</section>
<!-- End page content -->