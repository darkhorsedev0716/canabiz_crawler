
<div class="col-md-12 mt-20">
    <div class="title">Average Prices</div>
    <table class="table table-striped table-bordered table-inverse">
    	<!--average price units are the headers-->
    	<thead>
    		<tr>
    			<% @product.average_prices.each do |average_price| %>
    				<th style="text-align: center;"><%=average_price.average_price_unit%></th>
    			<% end %>
    		</tr>	
		</thead>
			<tr>
				<% @product.average_prices.each_with_index do |average_price, index| %>
					
                    <% if index == 0 %>
    					<td><span itemprop="price">$<%=average_price.average_price%></span></td>
    				<% else %>
    					<td>$<%=average_price.average_price%></td>
    				<% end %>
    			<% end %>
			</tr>
    </table>
</div>