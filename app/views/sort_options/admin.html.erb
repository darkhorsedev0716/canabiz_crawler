<div class = 'wrap'>
    <h2 align = 'center'>Sort Options</h2>
    <h3 align = 'center'><%= link_to 'Admin Home', admin_path %></h3>
    <h3 align = 'center'><%= link_to 'Add Sort Option', new_sort_option_path %></h3>
    
    <!--Import CSV File-->
    <div align = 'center'>
        <h3>Import Sort Options</h3>
        <%= form_tag import_sort_options_path, multipart: true do %>
            <%= file_field_tag :file, :style => 'margin-left: 80px;' %>
            </br>
            <%=submit_tag "Import"%>
        <% end %>    
    </div>
    
    <!--Export CSV File-->
    <div align = 'center'>
        <h3>Export Sort Options</h3>
        <%=link_to "CSV File", sort_options_admin_path(format: "csv"), class: 'btn btn-default' %>
    </div>
    

    <%= form_tag destroy_multiple_sort_options_path, method: :delete do %> 
        <table class = 'table'>
            <th><input type="checkbox" onclick=selectAllCheckboxes(this)> Mass Delete</th>
            <th>Name</th>
            <th>Query</th>
            <th>Direction</th>
            <th>Num Clicks</th>
            <th>Edit</th>
            <th>Delete</th>
            
            <% @sort_options.each do |option| %>
                <tr>
                    <td><%= check_box_tag "hashtags[]", option.id %></td>
                    <td><%= option.name%></td>
                    <td><%= option.query%></td>
                    <td><%= option.direction%></td>
                    <td><%= option.num_clicks%></td>
                    

                    <td><%= link_to "Edit", edit_sort_option_path(option), class: "btn" %></td>
                    <td><%= link_to "Delete", sort_option_path(option), method: :delete,
                                data: { confirm: "Are you sure you want to delete this Sort Option?"},
                                class: "btn" %></td>
                </tr>
            <% end %>
        </table>
        <%= submit_tag "Delete selected" %>
    <% end %>
</div>