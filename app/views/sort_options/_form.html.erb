<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@sort_option, :html => {class:"form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :query %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :query, class: "form-control", placeholder: "Query", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :direction %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :direction, class: "form-control", placeholder: "Direction", autofocus: true %>
                </div>
            </div>            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-lg btn-xlarge'%>
                </div>
            </div>
        <% end %>
        <div class="center">
            <%= link_to 'Return to Sort Options', sort_options_admin_path %>
        </div>
    </div>
</div>