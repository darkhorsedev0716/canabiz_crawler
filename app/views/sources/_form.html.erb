<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@source, :html => {class:"form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Source", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :url %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :url, rows: 10, class: "form-control", placeholder: "Homepage Url" %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :logo %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :logo, rows: 10, class: "form-control", placeholder: "Logo Url" %>
                </div>
            </div>            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-lg btn-xlarge'%>
                </div>
            </div>
        <% end %>
        <div class="center">
            <%= link_to 'Return to Source Listing', source_admin_path %>
        </div>
    </div>
</div>