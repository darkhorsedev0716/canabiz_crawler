<%= form_for(@product_item, remote: true, :html => { :role => "form" }) do |f| %>
	<div id="error_explanation" class="bg-danger text-danger">
	</div>
	
	<div class="row">
		<div class="col-sm-6">
			<div class="form-group">
				<div class="control-label col-sm-2">
                    <b>Quantity</b>
                </div>
                <%= f.number_field :quantity, :class => 'text_field'%>
			</div>
			<div class="form-group">
                <div class="row">
                    <div class="control-label col-sm-2">
                        <b>Unit</b>
                    </div>
                    <div class="col-sm-8">
                        <%= f.collection_select :dsp_price_id, @dsp_values, :id, :unit %>
                    </div>
                </div>
            </div>
            
            <%= f.hidden_field :cart_id, :value => @cart.id %>
            <%= f.hidden_field :product_id, :value => @product_id %>
            <%= f.hidden_field :dispensary_id, :value => @dispensary_id %>
			
			<div class="form-group">
				<%= f.submit  @product_item.new_record? ? "Create Product Item" : "Update Product Item", :class => "btn btn-primary" %>
			</div>
		</div>
	</div>
<% end %>