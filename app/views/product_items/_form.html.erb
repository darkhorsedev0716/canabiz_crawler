<%= form_for(@product_item, remote: true, :html => { :role => "form" }) do |f| %>
	<div id="error_explanation" class="bg-danger text-danger">
	</div>
	
	<div class="row">
		<div class="col-sm-6">
			<div class="form-group">
				<%= f.label :quantity, :class => "control-label" %>
				<%= f.text_field :quantity, :class => "form-control first_input"  %>
			</div>
			<div class="form-group">
				<%= f.submit  @product_item.new_record? ? "Create Product Item" : "Update Product Item", :class => "btn btn-primary" %>
			</div>
		</div>
	</div>
<% end %>