<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@digest_email, :html => {class:"form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :email %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :email, class: "form-control", placeholder: "Name", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :active %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :active, class: "form-control", placeholder: "Abbreviation", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-lg btn-xlarge'%>
                </div>
            </div>
        <% end %>
        <div class="center">
            <%= link_to 'Return to Digest Email Listing', digest_emails_admin_path %>
        </div>
    </div>
</div>