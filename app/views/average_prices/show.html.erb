<style>
    #page-content {
        min-height: 500px;
    }
    @media screen and (max-width: 500px) {
        #page-content {
            min-height: 300px;
        }
    }
</style>

<section id="page-content" class="page-wrapper archive">
    <div class="zm-section single-post-wrap archive-2 bg-white ptb-15">
        <div class="container">
            <div class="row">
				<div class="news-viewing-title-div" style="text-align: center; margin: 20px 0;">
                    <h3><a href="<%=product_path(@product)%>"><%=@product.name%></a> ~ 
                        <span style = 'color: #2ab081;'>
                            <%="$#{@average_price.average_price.round}/#{@average_price.average_price_unit}"%> 
                        </span>
                    </h3>
                </div>
                
                <div class="row mt-40">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="row mb-40">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class ="container">
                                    <div class="section-title">
                                    	<h2 class="h6 inline-block uppercase header-button active-header-button" style="cursor: default;">
                                    	    Dispensaries with <%=@average_price.average_price_unit%> Price <= Average: 
                                    	    <%=@dispensary_to_product.count%></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="row mb-40">
                                <div class="zm-posts clearfix col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div id = 'dispensary-results'>
                                        <%= render :partial => "average_prices/dispensary", :collection => @dispensary_sources, :as => :dispSource %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    	</div>
    </div>
</section>