<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@state, :html => {class:"form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :abbreviation %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :abbreviation, class: "form-control", placeholder: "Abbreviation", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :logo %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :logo, class: "form-control", placeholder: "Logo", autofocus: true %>
                </div>
            </div> 
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :product_state %>
                </div>
                <div class="col-sm-8">
                    False: <%= f.radio_button :product_state, false, :checked => true , :value => false %>  True: <%= f.radio_button :product_state, true, :value => true%>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :keywords %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :keywords, class: "form-control", placeholder: "Keyword,keyword,keyword (for article matching)", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-lg btn-xlarge'%>
                </div>
            </div>
        <% end %>
        <div class="center">
            <%= link_to 'Return to State Listing', states_admin_path %>
        </div>
    </div>
</div>