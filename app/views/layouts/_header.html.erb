<div class = 'header'>
    <div class="wrap">
    <div class = 'header-left inline'>
        <div class = 'header-logo inline'><%= link_to image_tag("header_footer/cbz-logo-color.svg"), root_path %></div>
    </div> <!-- END HEADER LEFT -->

    <div class = 'header-center inline'>

        <!--search-->
        <form class="navbar-form" role="search" method="get" action = '/search'>
            <input type="text" class="form-control input-lg" name='query' id ='searchQuery' placeholder="What can we help you find..." autocomplete='on'>
            <input type = 'submit' id = 'searchButton' onclick = 'search()' class = "btn btn-default btn-green-touching" value = 'Search' />
        </form>
        
    </div> <!-- END HEADER CENTER -->
    
    <div class = 'header-right inline'>
        <div class = 'header-login'>
            
            <p><span onclick = "openMenuNav()" style = "cursor:pointer">Menu</span> | 
            <% if logged_in? %>
                <%= link_to 'Logout', logout_path, method: :delete %></p>
            <% else %>
                <%= link_to 'Log In', login_path %> <%= link_to 'Sign Up', signup_path, :class => 'signup-button' %></p>
            <% end %>
        </div> <!-- END HEADER LOGIN -->
    </div> <!-- END HEADER RIGHT -->
    
    </div> <!-- END WRAP -->
</div> <!-- END HEADER -->


<!-- State Overlay -->
<div id="state-overlay" class="overlay">

  <!-- Button to close the overlay navigation -->
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><span class="closeIcon">&times;</span><span class='closeText'>Close</span></a>

    <div class="overlay-content">
        <% State.all.order("name ASC").each do |state| %>
            <a href="<%=state_path(state)%>"><%=state.name%></a>
        <% end %>
    </div>

</div>


    
<!-- Sort Overlay -->
<div id="category-overlay" class="overlay">

  <!-- Button to close the overlay navigation -->
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><span class="closeIcon">&times;</span><span class='closeText'>Close</span></a>

    <div class="overlay-content">
        <% SortOption.all.order("name ASC").each do |option| %>
            <p onclick = 'changeSort(this)'><%=option.name%></p>
            
        <% end %>
    </div>

</div>


<!--Menu Overlay-->
<div id="menu-overlay" class="overlay">

  <!-- Button to close the overlay navigation -->
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><span class="closeIcon">&times;</span><span class='closeText'>Close</span></a>

    <div class="overlay-content">
        <div class = 'menu-login'>
            <% if logged_in? %>
                <%= link_to 'Logout', logout_path, method: :delete %></p>
            <% else %>
                <%= link_to 'Log In', login_path %> <%= link_to 'Sign Up', signup_path, :class => 'signup-button' %></p>
            <% end %>
        </div> 
        
        <% if current_user %>
            <a href="<%= user_path(current_user)%>">My Page</a>
        <% else %>
            <a href="<%= login_path %>">My Page</a>
        <% end %>
        
        <a href="#">About</a>
        <a href="<%= contact_us_path%>">Contact Us</a>
        <a href="<%= feedback_path%>">Leave Feedback</a>
        
        <% if current_user %>
            <a href="<%= change_password_path(current_user) %>">Change Password</a>
        <% end %>
        
        <div class = "menu-small-links">
            <a href="#">Terms & Conditions</a>
            <a href="#">Privacy Policy</a>
        </div>
        
    </div>

</div>
    

